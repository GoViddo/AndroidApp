<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    android:id="@+id/cardview_Subscription"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="false"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_centerHorizontal="true"
    android:thicknessRatio="1.9"
    android:layout_margin="2dp">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/logo_splash1"
        android:layout_gravity="top"
        android:id="@+id/VideoLikedToPlay"
        app:civ_border_width="2dp" app:civ_border_color="#FF000000" />

    <TextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/txtShowTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="@dimen/normal_text_size"
        android:textColor="#FF000000"
        android:layout_alignParentTop="true" />

    <TextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/txtShowDesc"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textStyle="bold"

        android:textSize="@dimen/normal_text_size"
        android:textColor="#FF000000"
        android:layout_alignParentTop="true" />

</android.support.v7.widget.CardView>